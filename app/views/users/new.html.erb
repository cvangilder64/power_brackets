<div class="container-fluid container1" id="logo">
    <div class="jumbotron">
        <%= bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |user| %>
            <%= user.email_field :email %>
            <%= user.password_field :password %>
            <%= user.form_group do %>
                <%= user.submit %>
            <% end %>
        <% end %>

        <form class="col-md-6">
            <h2>Create a New Profile</h2>
             <!-- Email Address Input -->
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <input class="form-control" type="email" placeholder="Email address">
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input class="form-control" type="text" placeholder="First Name">
                <input class="form-control" type="text" placeholder="Last Name">
            </div>
            <!-- Password Input -->
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input class="form-control" type="password" placeholder="Password">
                <input class="form-control" type="password" placeholder="Confirm Password">
            </div>
            <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
            </div>
            <!-- Sign Up Button -->
            <button type="submit" class="sign-in-button">Sign Up Now</button>
        </form>

        <div class="col-md-6 hidden-sm hidden-xs">
            <h2>Already a Member?</h2>
            <hr>
            <br>
            <h3>Click the Power On Button<br> to jump into the competition!</h3>
        </div>
</div>

